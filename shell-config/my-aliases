alias v=vim
alias l="ls -lah"
alias grep='grep --color=auto'
alias -s {zip,ZIP,jar,JAR,war,WAR}="unzip -l"
alias mc='my-config'
alias install-packages-from-list='sudo pacman -S --needed $(comm -12 <(pacman -Slq|sort) <(sort pkglist.txt) )'
alias backup-config-files-modifications="pacman -Qii | awk '/^MODIFIED/ {print \$2}' | tar -n -T - -cvzf modified_cfg_files.tz"

ialias l='exa -lah'
ialias grep='grep --color=auto'
ialias my-config='/usr/bin/git --git-dir=$HOME/.myconfig/ --work-tree=$HOME'
ialias create-packages-list='pacman -Qqen > pkglist.txt'
ialias create-local-packages-list='pacman -Qqen > localpkglist.txt'

# starts one or multiple args as programs in background
background() {
  for ((i=2;i<=$#;i++)); do
    ${@[1]} ${@[$i]} &> /dev/null &
  done
}

